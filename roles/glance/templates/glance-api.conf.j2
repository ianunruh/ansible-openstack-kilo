[DEFAULT]
workers = {{ glance_api_workers }}

{% if glance_ceilometer %}
notification_driver = messagingv2
rpc_backend = rabbit
{% endif %}

[glance_store]
default_store = file
filesystem_store_datadir = /var/lib/glance/images

[database]
connection = mysql://{{ glance_mysql_user }}:{{ glance_mysql_password }}@{{ glance_mysql_host }}/{{ glance_mysql_db }}

[keystone_authtoken]
identity_uri = {{ glance_keystone_identity_uri }}
auth_uri = {{ glance_keystone_auth_uri }}
admin_user = {{ glance_keystone_user }}
admin_password = {{ glance_keystone_password }}
admin_tenant_name = {{ glance_keystone_project }}

[paste_deploy]
flavor = keystone

{% if glance_ceilometer %}
[oslo_messaging_rabbit]
rabbit_hosts = {{ glance_rabbitmq_hosts|join(',') }}
rabbit_userid = {{ glance_rabbitmq_user }}
rabbit_password = {{ glance_rabbitmq_password }}
rabbit_virtual_host = {{ glance_rabbitmq_vhost }}
{% endif %}
